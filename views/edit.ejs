<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Edit Product</title>
  </head>
  <body>
    <a href="/">Back to Index</a>
    <h1>Edit <%=product.name%></h1>
    <form action="/products/<%=productId%>?_method=PUT" method="POST">
      <!-- help from study group -->
      <input type="text" name="name" value="<%=product.name%>" placeholder="name" /><br />
      <input type="text" name="img" value="<%=product.img%>" placeholder="img (url)"/><br />
      <input type="text" name="description" value="<%=product.description%>" placeholder="description"/><br />
      <input type="text" name="price" value="<%=product.price%>" placeholder="price"/><br/>
      <input type="text" name="qty" value="<%=product.qty%>" placeholder="quantity"/><br/>
      <input type="submit" value="Update" />
    </form>
  </body>
</html>